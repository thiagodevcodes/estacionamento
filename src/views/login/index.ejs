<%- include('../includes/head')  %> 
  <body>
    <div class="login-container">
        <div>
            <div class="login-info">
                <img src="/assets/img/logopark.png" alt="">
                <h1>SysPark</h1>
            </div>

            <div class="login-inputs">
                <header>
                    <h1>Login</h1>
                </header>
                <form action="/" method="POST">
                    <div class="login-input-box">
                        <img src="/assets/img/loginuser.png" alt="">
                        <input placeholder="Login" type="text" name="username" autocomplete="off" required/> 
                    </div>
                    
                    <div class="login-input-box">
                        <img src="/assets/img/loginpass.png" alt="">
                        <input placeholder="Senha" type="password" name="password" required/>
                    </div>
                    
                    <div class="login-button">
                        <button type="submit">Entrar</button>
                        <a href="/usuario/atualizar">Esqueceu a senha?</a>
                        <% if (message) { %>
                            <label class="acess-denied"><%= message %></label>
                        <% } %>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>