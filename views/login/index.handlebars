<!doctype html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Login</title>
    </head>
  <body>
    <div class="login">
        <div class="login-content">
            <header class="modal-header">
                <img src="/img/account.png" class="user-img" alt="">
    
            </header>
            <form action="/" method="POST" class="modal-form">
                <input class="modal-field" placeholder="Login" type="text" name="username" id="loginAcess" required/> 
                <input class="modal-field" placeholder="Senha" type="password" name="password" required/>
                
                <div class="login-buttons">
                    <button class="button green" type="submit">Entrar</button>
                    <a class="login-link" href="/usuario/atualizar">Esqueceu a senha?</a>
                    {{#if message}}
                      <label class="acess-denied">{{message}}</label>
                    {{/if}}
                </div>
            </form>
        </div>
    </div>
</body>
</html>